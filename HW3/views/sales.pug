include layouts/layout
.container
    h2.mt-4 #{title}
    if sales.length === 0
        h2 Sorry no current Sales
    else
        h2 Sales
        table.table.table-striped
            thead
                tr
                    th(scope='col') Date
                    th(scope='col') Customer
                    th(scope='col') Product
                    th(scope='col') Quantity
                    th(scope='col') Total Sales
                tbody
                     each s in sales
                         tr
                             td= s.FormattedSalesDate
                             td= s.CustomerName
                             td= s.Product
                             td= s.Quantity
                             td= '$' + (parseFloat(s.TotalSales).toLocaleString(undefined, {minimumFractionDigits: 2}))

