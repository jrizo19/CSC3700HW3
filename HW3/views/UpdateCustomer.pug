include layouts/layout

.container
    h1.mt-3
    div.mt-3
        h1 #{title}
        p
            | Update Customer
        if ( customer == null )
            h2 Sorry customer is null

    div.mt-2
        form(action='/postUpdateCustomer' method='post')
            .form-group
                input.form-control(type= "hidden" name="CustomerID" value= customer.CustomerID)
            .form-group
                label(for='customerName') Name
                input.form-control(type='text' aria-describedby='emailHelp' id='customerName' name='name' placeholder='customer.' value= customer.CustomerName)
            .form-group
              label(for='customerEmail') Email
              input.form-control(type='text' aria-describedby='emailHelp' id='customerEmail' name='email' value= customer.CustomerEmail)

            button.btn.btn-primary(type='submit') Update