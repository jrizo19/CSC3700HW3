doctype html
html
    head
        meta(charset='UTF-8')
        title Title
        link(rel='stylesheet', href='/css/bootstrap.css')
        script(src='js/bootstrap.bundle.js' rel='stylesheet')
        style.
            h1, h2, h3, h4, h5, h6 {
                color: #66fcf1;
            }
            p {
                color: white;
            }
            .company-name {
                position: relative;
                left: 30%;
                font-weight: bold;
            }

            @media (max-width: 1200px) {
                .company-name {
                    left: 17%;
                }
            }

            @media (max-width: 991px) {
                .company-name {
                    position: initial;
                }
            }
    body.bg-dark
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.static-top
            .container
                a.navbar-brand(href='#')
                    img(src='/imgs/harry.jpeg' alt='Harry' height='80')
                h3.company-name
                    | Happy Harry's Hardware
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.ms-auto
                        li.nav-item
                            a.nav-link.active(aria-current='page' href='#') Home
                        li.nav-item
                            if from === 'customers'
                                a.nav-link.active(href='/customers') Customers
                            else
                                a.nav-link(href='/customers') Customers
                        li.nav-item
                            if from === 'products'
                                a.nav-link.active(href='/products') Products
                            else
                                a.nav-link(href='/products') Products
                        li.nav-item
                            if from === 'sales'
                                a.nav-link.active(href='/sales') Sales
                            else
                                a.nav-link(href='/sales') Sales
        div.separator(style='background-color: #66fcf1; height: 5px;')
